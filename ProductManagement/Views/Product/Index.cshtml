@model List<ProductManagement.Models.Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="row mb-3">
    <div class="col">
        <h2>Product List</h2>
    </div>
    <div class="col text-end">
        <a asp-action="Create" class="btn btn-primary">Add New Product</a>
    </div>
</div>

<div class="row">
    <div class="col">
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                <p class="mb-0">No products available. <a asp-action="Create">Add your first product</a></p>
            </div>
        }
    </div>
</div>
